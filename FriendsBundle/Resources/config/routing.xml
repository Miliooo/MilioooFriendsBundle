<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="miliooo_friends_add" pattern="/add/{userRelationshipId}">
        <default key="_controller">miliooo_friends.controller.add_friends_controller:AddFriendsAction</default>
    </route>

    <route id="miliooo_friends_delete" pattern="/delete/{userRelationshipId}">
        <default key="_controller">miliooo_friends.controller.delete_friends_controller:DeleteRelationship</default>
    </route>

    <route id="miliooo_friends_get_followers" pattern="/followers/{userRelationshipId}">
        <default key="_controller">miliooo_friends.controller.show_friends_controller:getFollowersAction</default>
    </route>

</routes>
